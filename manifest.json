{

  "manifest_version": 2,
  "name": "SPCR for Steam",
  "version": "1.0.1",

  "description": "Shows ratings from spcr.netlify.com on Steam",

  "permissions" : [
      "https://spcr.netlify.com/data/*"
  ],

  "icons": {
    "48": "icons/spcr-48.png",
    "96": "icons/spcr-96.png"
  },

  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/app/*"],
      "js": ["src/spcr.js"],
      "css": ["src/spcr.css"]
    }
  ]

}
