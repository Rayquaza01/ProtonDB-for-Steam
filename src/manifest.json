{

  "manifest_version": 2,
  "name": "ProtonDB for Steam",
  "version": "1.8.1",

  "description": "Shows ratings from protondb.com on Steam",

  "permissions" : [
      "https://www.protondb.com/*",
      "storage"
  ],

  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/app/*"],
      "js": ["js/browser-polyfill.min.js", "js/Options.js", "js/svg.js", "js/protondb.js", "js/whitelist.js", "js/gamePage.js"],
      "css": ["assets/decklike.css"]
    },
    {
      "matches": ["https://store.steampowered.com/wishlist/*"],
      "js": ["js/browser-polyfill.min.js", "js/Options.js", "js/svg.js", "js/protondb.js", "js/whitelist.js", "js/wishlist.js"],
      "css": ["assets/decklike.css"]
    },
    {
      "matches": ["https://store.steampowered.com/search/*"],
      "js": ["js/browser-polyfill.min.js", "js/Options.js", "js/svg.js", "js/protondb.js", "js/whitelist.js", "js/search.js"],
      "css": ["assets/decklike.css"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "background": {
    "scripts": ["js/browser-polyfill.min.js", "js/background.js"]
  },

  "browser_specific_settings": {
      "gecko": {
          "id": "protondb-steam@r01"
      }
  }

}
